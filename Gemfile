# frozen_string_literal: true

source 'https://rubygems.org'

git_source(:github) { |repo_name| 'https://github.com/#{repo_name}' }

# Routing tree web toolkit
gem 'roda', '~> 3.37'
# Ruby template engines interface
gem 'tilt', '~> 2.0'
# Template engine
gem 'erb', '~> 2.2'
# Ruby code laoder
gem 'zeitwerk', '~> 2.4'
# Pattern matching for Ruby
gem 'dry-matcher', '~> 0.8.3'
# Set of common monads for Ruby
gem 'dry-monads', '~> 1.3'
# HTTP client
gem 'httparty', '~> 0.18.1'
# Define schemas for validating JSON code
gem 'dry-schema', '~> 1.5'
# Map documents to Ruby objects
gem 'representable', '~> 3.0'
# Used by representable internally
gem 'multi_json', '~> 1.15'

group :development, :test do
  # Debug Ruby code
  gem 'byebug', '~> 11.1'
  # Ruby test framework
  gem 'rspec', '~> 3.10'
  # Load environment variables from .env file
  gem 'dotenv', '~> 2.7'
end
