# frozen_string_literal: true

source 'https://rubygems.org'

git_source(:github) { |repo_name| 'https://github.com/#{repo_name}' }

# Routing tree web toolkit
gem 'roda', '~> 3.37'
# Ruby template engines interface
gem 'tilt', '~> 2.0'
# Template engine
gem 'erb', '~> 2.2'
# Ruby code laoder
gem 'zeitwerk', '~> 2.4'
# HTTP client
gem 'httparty', '~> 0.18.1'
# Debug Ruby code
gem 'byebug', '~> 11.1'

group :development, :test do
  # Ruby test framework
  gem 'rspec', '~> 3.10'
  # Load environment variables from .env file
  gem 'dotenv', '~> 2.7'
end
